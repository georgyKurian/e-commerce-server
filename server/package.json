{
  "name": "e-commerce-server",
  "version": "0.0.1",
  "description": "API Server for the e-commerce site",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src -d dist",
    "debug-build": "babel src -d dist --source-maps",
    "debug": "babel-node debug src/index.js",
    "start": "nodemon --exec babel-node src/index.js",
    "serve": "node dist/index.js",
    "test": "standard && jest",
    "db:create": "docker build . -t mongodb_dev",
    "db:run": "docker run -p 27018:27017 --name mongodb_dev_instance -i -t mongodb_dev",
    "db:seed": "babel-node src/scripts/seed.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgyKurian/e-commerce.git"
  },
  "keywords": [
    "e-commerce"
  ],
  "author": "Georgy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/georgyKurian/e-commerce/issues"
  },
  "homepage": "https://github.com/georgyKurian/e-commerce#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.1",
    "response-time": "^2.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-async-generator-functions": "^7.7.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-syntax-top-level-await": "^7.7.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-prettier": "^3.1.1",
    "faker": "^4.1.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "regenerator-runtime": "^0.13.3",
    "standard": "^14.3.1"
  }
}
